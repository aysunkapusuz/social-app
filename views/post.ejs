<%- include('partials/header') -%>
 
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2 class="text-decoration-underline"> <%= %></h2>
      <img class="img-thumbnail" src="<%= post.image%>" />
      <div class="row justify-content-around">
        <h6 class="col-4">likes: <%= post.likes %></h6>
        <form
          class="col-3"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-outline-danger fa fa-heart btn-sm" type="submit"></button>
        </form>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-outline-warning fa fa-trash btn-sm" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-6 mt-1">
      <h2 class="text-decoration-underline"><%= post.title %></h2>
      <p><%= post.caption %></p>
    </div>
    <div class="col-6">
      <h2 class="text-decoration-underline">Comments</h2>
      <ul class="row list-unstyled">
      <% for(var i=0; i<comments.length; i++) {%>
        <li class="col-12  mt-1">
          <p ><%=comments[i].comment%></p>
        </li>
      <% } %>
      </ul>
    </div>  
    <div class="col-6">
      <h3 class="text-decoration-underline">Add a comment</h3>
      <form action="/comment/createComment/<%= post._id %>" method="POST">
        <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <button type="submit" class="btn btn-secondary">Submit</button>
      </form>
    </div>
</div>
<div class="row justify-content-around mt-5 mb-5">
      <a class="col-3 rainbow-button" alt="Profile" href="/profile"></a>
      <a class="col-3 rainbow-button" alt="Feed" href="/feed"></a>
      <a class="col-3 rainbow-button" alt="Logout" href="/logout"></a>
</div>
</div>
</div>

  
 
<%- include('partials/footer') -%>
