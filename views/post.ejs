<%- include('partials/header') -%>
 
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h3><%= post.title %></h3>
      <img class="img-thumbnail" src="<%= post.image%>" />
      <div class="row justify-content-center">
        <form
          class="col-3"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-danger fa fa-heart" type="submit"></button>
        </form>
        <h6 class="col-3">Likes: <%= post.likes %></h6>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-6 mt-5">
      <p><%= post.caption %></p>
    </div>
    <div class="col-6">
      <ul class="row list-unstyled">
      <% for(var i=0; i<comments.length; i++) {%>
        <li class="col-12  mt-1">
          <p><%=comments[i].comment%></p>
        </li>
      <% } %>
      </ul>
    </div>  
    <div class="col-6">
      <h2>Add a comment</h2>
      <form action="/comment/createComment/<%= post._id %>" method="POST">
        <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <button type="submit" class="btn btn-secondary">Submit</button>
      </form>
    </div>
</div>
<div class="row justify-content-around mt-5">
    <div class="col-3">
      <a class="btn btn-outline-warning" href="/profile">Return to Profile</a>
      <a class="btn btn-outline-warning" href="/feed">Return to Feed</a>
    </div>
</div>
</div>
</div>

  
 
<%- include('partials/footer') -%>
